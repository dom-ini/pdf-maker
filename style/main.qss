* {
    font-family: 'Segoe UI';
    font-size: 16px;
}

QPushButton {
    background-color: #007bff;
    border-radius: 5px;
    border: 1px solid #0069d9;
    padding: 5px 10px 5px 10px;
    color: white;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #0069d9;
}

QLineEdit {
    border-radius: 5px;
    padding: 4px;
    border: 1px solid lightgray;
}

QListWidget {
    border: 1px solid lightgray;
}

QLineEdit:disabled {
    background-color: #E8E8E8;
}